{
  "manifest_version": 2,
  "name": "BetterBlocker",
  "version": "0.1.0",
  "description": "Ultra-fast content blocker with uBO-class feature coverage",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "alarms",
    "<all_urls>"
  ],

  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",

  "background": {
    "scripts": ["bg/main.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["cs/bootstrap.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "web_accessible_resources": [
    "resources/redirects/noop.js",
    "resources/scriptlets/registry.js"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "BetterBlocker",
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "betterblocker@example.com",
      "strict_min_version": "78.0"
    }
  }
}
